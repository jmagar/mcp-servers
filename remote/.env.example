# Server Configuration
PORT=3000
NODE_ENV=development

# Security - DNS Rebinding Protection
ALLOWED_ORIGINS=http://localhost:*,https://localhost:*
ALLOWED_HOSTS=localhost

# HTTP Transport Features
ENABLE_RESUMABILITY=true
SKIP_HEALTH_CHECKS=false

# Scraping Service API Keys
FIRECRAWL_API_KEY=
BRIGHTDATA_API_KEY=

# Optimization Strategy
# Options: 'cost' or 'speed'
# - cost: Prioritizes cheaper scraping methods (native -> Firecrawl -> BrightData)
# - speed: Prioritizes faster scraping methods (BrightData -> Firecrawl -> native)
OPTIMIZE_FOR=speed

# LLM Providers (for extract feature)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Resource Storage
# Options: 'memory' or 'filesystem'
RESOURCE_STORAGE=memory
RESOURCE_STORAGE_DIR=./resources
